                                          ScrollViewer.VerticalScrollBarVisibility="Hidden" 
                                          Background="White" 
                                          Grid.Row="2"
                                          HorizontalContentAlignment="Center"
                                          Width="500" 
                                          MouseLeftButtonUp="CategoryListView_MouseLeftButtonUp"
                                          ItemsSource="{Binding Components}">

                                        <!--Bo tròn góc dưới cho ListView-->
