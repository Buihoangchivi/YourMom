                                                      Hoverable="True" Height="300" 
                                                      IsVisibleChanged="IncomeReportChart_IsVisibleChanged">
                                        </lvc:PieChart>

                                    </Grid>

                                </Button>

                                <!--Nút xem chi tiết báo cáo về chi tiêu-->
                                <Button Grid.Column="1"
                                    Name="ExpenseButton" 
                                    Click="CommonChartButton_Click">

                                    <!--Tạo màu khi đưa chuột vào nút và bo tròn góc trên bên phải cho nút-->
                                    <Button.Style>
                                        <Style TargetType="{x:Type Button}">
                                            <Setter Property="Background" Value="White"/>
                                            <Setter Property="Template">
                                                <Setter.Value>
                                                    <ControlTemplate TargetType="{x:Type Button}">
                                                        <Border CornerRadius="0,10,0,0" BorderThickness="0" Background="{TemplateBinding Background}">
                                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                        </Border>

                                                    </ControlTemplate>
                                                </Setter.Value>
                                            </Setter>
                                            <Style.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter Property="Background" Value="#EFF9F1"/>
                                                </Trigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Button.Style>

                                    <Grid>

                                        <Grid.RowDefinitions>

                                            <RowDefinition Height="1*"/>
                                            <RowDefinition Height="3*"/>

                                        </Grid.RowDefinitions>

                                        <!--Khung hiển thị biểu đồ hình bánh về chi tiêu-->
                                        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">

                                            <TextBlock FontSize="16"
                                                       HorizontalAlignment="Center" 
                                                       Foreground="#FF757575">Expense</TextBlock>

                                            <TextBlock Name="ExpenseTextBlock"
                                                   FontWeight="Medium" 
                                                   FontSize="25"     
                                                   Foreground="#E51C23"/>

                                        </StackPanel>

                                        <!--Biểu đồ hình bánh biểu thị chi tiêu-->
                                        <lvc:PieChart Grid.Row="1" LegendLocation="None"  
                                                      Name="ExpenseReportChart" Hoverable="True" 
                                                      Width="250" Height="300"
                                                      IsVisibleChanged="ExpenseReportChart_IsVisibleChanged">
                                        </lvc:PieChart>

                                    </Grid>

                                </Button>

                                <!--Đường viền ngăn cách-->
                                <Border Grid.Row="1" Grid.ColumnSpan="2"
                                        BorderThickness="0,0.3,0,0" 
                                        BorderBrush="#FF757575">

                                    <!--Nút xem chi tiết nợ-->
                                    <Button Name="DebtButton"
                                        Grid.Row="2"
                                        Click="CommonChartButton_Click">

                                        <!--Tạo màu khi đưa chuột vào nút-->
                                        <Button.Style>
                                            <Style TargetType="{x:Type Button}">
                                                <Setter Property="Background" Value="White"/>
                                                <Setter Property="Template">
                                                    <Setter.Value>
                                                        <ControlTemplate TargetType="{x:Type Button}">
                                                            <Border BorderThickness="0" Background="{TemplateBinding Background}">
                                                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                            </Border>
                                                        </ControlTemplate>
                                                    </Setter.Value>
                                                </Setter>
                                                <Style.Triggers>
                                                    <Trigger Property="IsMouseOver" Value="True">
                                                        <Setter Property="Background" Value="#EFF9F1"/>
                                                    </Trigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Button.Style>

                                        <!--Khung chứa nội dung của nút nợ-->
                                        <DockPanel Name="DebtDockPanel"
                                                   Width="600" LastChildFill="True">

                                            <TextBlock DockPanel.Dock="Left" Text="Debt"
                                                       VerticalAlignment="Center"
                                                       FontSize="17" Margin="50,0,0,0"></TextBlock>
                                            <Image Source="Images/arrow_forward.png" Width="18"
                                                   RenderOptions.BitmapScalingMode="HighQuality"
                                                   DockPanel.Dock="Right" Margin="0,0,50,0"></Image>

                                            <!--Stack chứa thông tin đã nợ và trả được bao nhiêu-->
                                            <StackPanel DockPanel.Dock="Right" Margin="0,0,15,0">

                                                <!--Thông số đã mượn bao nhiêu tiền-->
                                                <TextBlock Name="DebtTextBlock"
                                                       FontSize="18" 
                                                       HorizontalAlignment="Right"
                                                       Foreground="#039BE5"/>

                                                <!--Thông số đã trả được bao nhiêu tiền-->
                                                <TextBlock Name="DebtLeftTextBlock" 
                                                       FontSize="18" 
                                                       Foreground="#FF757575"/>

                                            </StackPanel>

                                            <TextBlock/>

                                        </DockPanel>

                                    </Button>

                                </Border>

                                <!--Đường viền ngăn cách-->
                                <Border Grid.Row="2" Grid.ColumnSpan="2"
                                        BorderThickness="0,0.3,0,0" 
                                        BorderBrush="#FF757575">

                                    <!--Nút xem chi tiết cho vay-->
                                    <Button Name="LoanButton"
                                        Click="CommonChartButton_Click">

                                        <!--Tạo màu khi đưa chuột vào nút và bo tròn 2 góc dưới cho nút-->
                                        <Button.Style>
                                            <Style TargetType="{x:Type Button}">
                                                <Setter Property="Background" Value="White"/>
                                                <Setter Property="Template">
                                                    <Setter.Value>
                                                        <ControlTemplate TargetType="{x:Type Button}">
                                                            <Border CornerRadius="0,0,10,10" BorderThickness="0" Background="{TemplateBinding Background}">
                                                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                            </Border>
                                                        </ControlTemplate>
                                                    </Setter.Value>
                                                </Setter>
                                                <Style.Triggers>
                                                    <Trigger Property="IsMouseOver" Value="True">

                                                        <Setter Property="Background" Value="#EFF9F1"/>

                                                    </Trigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Button.Style>

                                        <!--Khung chứa nội dung của nút cho vay-->
                                        <DockPanel Name="LoanDockPanel" Width="600" LastChildFill="True">

                                            <TextBlock DockPanel.Dock="Left" Text="Loan"
                                                       VerticalAlignment="Center"
                                                       FontSize="17" Margin="50,0,0,0"></TextBlock>
                                            <Image Source="Images/arrow_forward.png" Width="18"
                                                   RenderOptions.BitmapScalingMode="HighQuality"
                                                   DockPanel.Dock="Right" Margin="0,0,50,0"></Image>

                                            <!--Stack chứa thông tin đã cho vay và thu lại được bao nhiêu-->
                                            <StackPanel DockPanel.Dock="Right" Margin="0,0,15,0">

                                                <!--Thông số đã cho vay bao nhiêu tiền-->
                                                <TextBlock Name="LoanTextBlock"
                                                       FontSize="18" 
                                                       HorizontalAlignment="Right"
                                                       Foreground="#E51C23"/>

                                                <!--Thông số đã thu về được bao nhiêu tiền-->
                                                <TextBlock Name="LoanLeftTextBlock" 
                                                       FontSize="18" 
                                                       Foreground="#FF757575"/>

                                            </StackPanel>

                                            <TextBlock/>

                                        </DockPanel>

                                    </Button>

                                </Border>

                            </Grid>

                        </Border>

                    </Grid>

                    <!--Khung hiển thị báo cáo chi tiết về thu nhập-->
                    <Grid Name="DetailReportGrid" Grid.Column="1" Width="600" Visibility="Collapsed">

                        <ScrollViewer Name="DetailScrollViewer"
                                  VerticalScrollBarVisibility="Hidden">

                            <Border Background="White" CornerRadius="8">

                                <Grid>

                                    <Grid.RowDefinitions>

                                        <RowDefinition Height="50"/>
                                        <RowDefinition Height="400"/>
                                        <RowDefinition Height="1*"/>
                                        <RowDefinition Height="20"/>

                                    </Grid.RowDefinitions>

                                    <!--Khung hiển thị tên và kiểu biểu đồ muốn xem-->
                                    <DockPanel Name="ViewBar" Height="50" LastChildFill="True">

                                        <Button Width="50" Height="50" Name="CloseDetailButton"
                                            Click="CloseDetailButton_Click" 
                                            Margin="20,0,0,0">
                                            <Button.Style>
                                                <Style TargetType="{x:Type Button}">
                                                    <Setter Property="Background" Value="White"/>
                                                    <Setter Property="Template">
                                                        <Setter.Value>
                                                            <ControlTemplate TargetType="{x:Type Button}">
                                                                <Border Background="{TemplateBinding Background}">
                                                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                                </Border>
                                                            </ControlTemplate>
                                                        </Setter.Value>
                                                    </Setter>
                                                    <Style.Triggers>
                                                        <Trigger Property="IsMouseOver" Value="True">
                                                            <Setter Property="Background" Value="#FFC8C4C4"/>
                                                        </Trigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </Button.Style>

                                            <StackPanel>
                                                <Image Source="Images/black_close.png" Width="17" 
                                                   Name="CloseFrameImage"
                                                   RenderOptions.BitmapScalingMode="HighQuality"/>
                                            </StackPanel>

                                        </Button>

                                        <TextBlock Text="{Binding Title}" FontSize="25" FontWeight="DemiBold"
                                               VerticalAlignment="Center" Margin="20,0,0,5"
                                               Name="DetailReportTextBlock"/>

                                        <!--Nút hiển thị biểu đồ hình cột-->

                                        <StackPanel DockPanel.Dock="Right" Margin="0,0,20,0"
                                                VerticalAlignment="Top">

                                            <Button Width="60" Height="50" DockPanel.Dock="Right"
                                                Name="ColumnChartIconButton"
                                                Click="ColumnChartIconButton_Click">
                                                <Button.Style>
                                                    <Style TargetType="{x:Type Button}">
                                                        <Setter Property="Background" Value="White"/>
                                                        <Setter Property="Template">
                                                            <Setter.Value>
                                                                <ControlTemplate TargetType="{x:Type Button}">

                                                                    <Border Background="{TemplateBinding Background}"
                                                                        BorderThickness="0,0,0,3">
                                                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                                    </Border>

                                                                </ControlTemplate>
                                                            </Setter.Value>
                                                        </Setter>
                                                        <Style.Triggers>
                                                            <Trigger Property="IsMouseOver" Value="True">
                                                                <Setter Property="Background" Value="#FFC8C4C4"/>
                                                            </Trigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </Button.Style>

                                                <StackPanel>
                                                    <Image Source="Images/columnChart.png" Width="30" RenderOptions.BitmapScalingMode="HighQuality"></Image>
                                                </StackPanel>

                                            </Button>

                                            <TextBlock Name="ColumnChartIconTextBlock" Visibility="Collapsed"
                                                   Height="5" Background="ForestGreen"></TextBlock>

                                        </StackPanel>

                                        <!--Nút hiển thị biểu đồ hình quạt-->
                                        <StackPanel DockPanel.Dock="Right"
                                                VerticalAlignment="Top">

                                            <Button Name="PieChartIconButton" Width="60" Height="50"
                                                Click="PieChartIconButton_Click">

                                                <Button.Style>
                                                    <Style TargetType="{x:Type Button}">
                                                        <Setter Property="Background" Value="White"/>
                                                        <Setter Property="Template">
                                                            <Setter.Value>
                                                                <ControlTemplate TargetType="{x:Type Button}">
                                                                    <Border Background="{TemplateBinding Background}"
                                                                        BorderThickness="0,0,0,3">
                                                                        <ContentPresenter HorizontalAlignment="Center" 
                                                                                  VerticalAlignment="Center"/>
                                                                    </Border>
                                                                </ControlTemplate>
                                                            </Setter.Value>
                                                        </Setter>
                                                        <Style.Triggers>
                                                            <Trigger Property="IsMouseOver" Value="True">
                                                                <Setter Property="Background" Value="#FFC8C4C4"/>
                                                            </Trigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </Button.Style>

                                                <StackPanel>
                                                    <Image Source="Images/pieChart.png" Width="30" RenderOptions.BitmapScalingMode="HighQuality"></Image>
                                                </StackPanel>

                                            </Button>

                                            <TextBlock Name="PieChartIconTextBlock" Visibility="Collapsed"
                                                   Height="4" Background="ForestGreen"></TextBlock>

