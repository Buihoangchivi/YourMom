                                                   Text="{Binding TotalMoney, Converter={StaticResource moneyConverter}}"
                                                   FontSize="27"
                                                   FontWeight="DemiBold" Grid.Column="1"
                                                   Grid.RowSpan="2"
                                                   HorizontalAlignment="Center"
                                                   VerticalAlignment="Center"
                                                   Foreground="#E51C23"/>

                                            <!--Biểu đồ hình cột linh động-->
                                            <lvc:CartesianChart LegendLocation="Bottom"
                                                            Grid.Row="1" Grid.ColumnSpan="2"
                                                            Name="DynamicColumnChart"
                                                            Margin="50,0,50,30"
                                                            Visibility="Collapsed">
