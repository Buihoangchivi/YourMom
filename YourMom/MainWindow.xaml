                                                        <Image Source="{Binding ImagePath}" Width="45"
                                                               RenderOptions.BitmapScalingMode="HighQuality"
                                                               Margin="0,0,0,0"/>

                                                        <!--Tên loại giao dịch-->
                                                        <TextBlock Text="{Binding Name}" VerticalAlignment="Center"
                                                                   FontSize="17" Margin="30,0,0,0"/>

