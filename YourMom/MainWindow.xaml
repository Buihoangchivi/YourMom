                                            <ControlTemplate>
                                                <Border CornerRadius="0,0,10,10" BorderThickness="0">
                                                    <ScrollViewer>
                                                        <ItemsPresenter/>
                                                    </ScrollViewer>
                                                </Border>
                                            </ControlTemplate>
                                        </ListView.Template>

                                        <ListView.ItemTemplate>

                                            <DataTemplate>



                                                <!--Đường viền ngăn cách-->
