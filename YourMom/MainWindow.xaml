                                                    </lvc:Axis>
                                                </lvc:CartesianChart.AxisY>
                                            </lvc:CartesianChart>

                                            <!--Textblock hiển thị số tiền-->
                                            <TextBlock Name="DynamicColumnChartTextBlock"
                                                   Text="{Binding TotalMoney, Converter={StaticResource moneyConverter}}"
                                                   FontSize="27"
                                                   FontWeight="DemiBold"
                                                   Grid.ColumnSpan="2"
                                                   HorizontalAlignment="Center"
